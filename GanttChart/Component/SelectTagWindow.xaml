<Window x:Class="GanttChart.Component.SelectTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttChart.Component"
        mc:Ignorable="d"
        Title="Select Tag" Height="450" Width="508.523" Loaded="Window_Loaded">
    <Grid x:Name="Grid">
        <Border BorderBrush="Black" BorderThickness="1" Height="28" Margin="10,10,10,0" VerticalAlignment="Top">
            <TextBox x:Name="NameFilter" TextWrapping="Wrap" Text="" TextChanged="NameFilter_TextChanged"/>
        </Border>
        <WrapPanel x:Name="TagArea" Margin="10,56,10,51"/>
        <Grid Margin="10,0,10,10" Height="36" VerticalAlignment="Bottom">
            <Button x:Name="Decision" Content="OK" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Click="Decision_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Margin="0,0,10,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="CancelButton_Click"/>
        </Grid>

    </Grid>
</Window>
